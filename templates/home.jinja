{% extends "base.jinja" %}
{% block title %}
  {{ ftl_get_message("brand") }}
{% endblock title %}
{% block content %}
  <div class="center">
    {% if trending_hashtags %}
      <div class="trending-hashtags">
        <h3>
          <a href="/hashtags">{{ ftl_get_message("trending-hashtags") }}</a>
        </h3>
        <ul class="hashtag-list">
          {% for hashtag in trending_hashtags %}
            <li class="hashtag-item">
              <a href="/hashtags/{{ hashtag.name }}">#{{ hashtag.display_name }}</a>
              <span class="hashtag-post-count">({{ hashtag.post_count }})</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    {% if non_official_public_community_posts| length > 0 %}
      <h2 class="home-section-title">{{ ftl_get_message("posts-from-public-communities") }}</h2>
      <div class="posts-grid">
        {% for post in non_official_public_community_posts %}
          <div class="posts-grid-item">
            <a href="/@{{ post.user_login_name }}/{{ post.id }}">
              <img width="{{ post.image_width }}"
                   height="{{ post.image_height }}"
                   alt="{{ post.title }}"
                   src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                   class="{% if post.is_sensitive %}sensitive{% endif %}" />
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    <h2 class="home-section-title">{{ ftl_get_message("latest-active-communities") }}</h2>
    <div class="community-badges">
      {% for (community, id) in active_public_communities[:10] %}
        <div class="community-badge">
          <a href="/communities/@{{ community.slug }}">{{ community.name }} ({{ community.posts_count }})</a>
        </div>
      {% endfor %}
    </div>
    {% if official_communities_with_latest_posts|length > 0 %}
      {% for community in
        official_communities_with_latest_posts %}
        <h2 class="home-section-title">
          <a href="/communities/@{{ community.slug }}">{{ community.name }}</a>
        </h2>
        <div class="posts-grid">
          {% for post in community.posts %}
            <div class="posts-grid-item">
              <a href="/@{{ post.user_login_name }}/{{ post.id }}">
                <img width="{{ post.image_width }}"
                     height="{{ post.image_height }}"
                     alt="{{ post.title }}"
                     src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                     class="{% if post.is_sensitive %}sensitive{% endif %}" />
              </a>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    {% else %}
      <p>{{ ftl_get_message("timeline-empty") |safe }}</p>
    {% endif %}
  </div>
{% endblock content %}
