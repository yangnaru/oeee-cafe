{% macro comments(comments) %}
  {% for comment in comments %}
    <div class="comment">
      <p>
        {{ ftl_get_message("comment-created-at") }}: {{ comment.created_at|datetimeformat(format="short",
         tz="Asia/Seoul") }}
      </p>
      <p>
        {{ ftl_get_message("display-name") }}:
        <a href="/@{{ comment.user_login_name }}">{{ comment.user_display_name }}</a>
        <span class="muted">@{{ comment.user_login_name }}</span>
      </p>
      <div>{{ comment.content|markdown|safe }}</div>
    </div>
  {% endfor %}
{% endmacro %}
