{% extends "base.jinja" %}
{% block title %}
  {{ super() }} | Reactions | {{ post_title }}
{% endblock title %}
{% block content %}
  <div class="center">
    <h1>Reactions</h1>
    <p>
      <a href="/@{{ login_name }}/{{ post_id }}">‚Üê Back to post: {{ post_title }}</a>
    </p>
    {% if grouped_reactions %}
      {% for group in grouped_reactions %}
        <div class="reaction-group">
          <h2>{{ group.emoji }} ({{ group.reactions | length }})</h2>
          <ul class="reaction-list">
            {% for reaction in group.reactions %}
              <li>
                <a href="/@{{ reaction.actor_login_name }}">{{ reaction.actor_name }}</a>
                <span class="muted">{{ reaction.actor_handle }}</span>
                <span class="muted">- {{ reaction.created_at }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    {% else %}
      <p>No reactions yet.</p>
    {% endif %}
  </div>
{% endblock content %}
