{% macro follow_button() %}
  {% if current_user.id != user.id %}
    <form hx-post="/@{{ user.login_name }}/follow" hx-swap="outerHTML">
      <button type="submit" class="button-follow">{{ ftl_follow }}</button>
    </form>
  {% endif %}
{% endmacro %}
{% macro unfollow_button() %}
  {% if current_user.id != user.id %}
    <form hx-post="/@{{ user.login_name }}/unfollow" hx-swap="outerHTML">
      <button type="submit" class="button-unfollow">{{ ftl_unfollow }}</button>
    </form>
  {% endif %}
{% endmacro %}
