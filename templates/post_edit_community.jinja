{% import "comments_macro.jinja" as comments_macro %}
{% extends "base.jinja" %}
{% block title %}
  {{ super() }} |
  {% if post.title %}
    {{ post.title }}
  {% else %}
    {{ ftl_get_message("post-no-title") }}
  {% endif %} | {{ ftl_get_message("post-move-community-title") }}
{% endblock title %}
{% block head %}
  <meta property="og:title" content="{{ post.title }}" />
  <meta property="og:description" content="{{ post.content }}" />
  <meta property="og:type" content="website" />
  <meta property="og:url"
        content="{{ base_url|safe }}/posts/{{ post_id }}" />
  <meta property="og:image"
        content="{{ r2_public_endpoint_url|safe }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}" />
  <meta property="twitter:site" content="@oeee_cafe">
  <meta property="twitter:domain" content="oeee.cafe">
  <meta name="twitter:card" content="summary_large_image">
  <meta property="twitter:url"
        content="{{ base_url|safe }}/posts/{{ post_id }}">
  <meta name="twitter:title" content="{{ post.title }}">
  <meta name="twitter:description" content="{{ post.content }}">
  <meta name="twitter:image"
        content="{{ r2_public_endpoint_url|safe }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}">
{% endblock head %}
{% block content %}
  <div class="center">
    <div class="post-sidebar">
      <div class="post-move-header">
        <h2>{{ ftl_get_message("post-move-community-title") }}</h2>
        <a href="/@{{ current_community.slug if current_community else post.login_name }}/{{ post_id }}" class="btn">{{ ftl_get_message("cancel") }}</a>
      </div>

      <div class="post-move-preview">
        <h3 class="section-heading">{{ ftl_get_message("post-move-post-to-move") }}</h3>
        <a href="/@{{ current_community.slug if current_community else post.login_name }}/{{ post_id }}" class="post-move-preview-link">
          <div class="post-move-preview-content">
            <img class="post-move-preview-image"
                 width="{{ post.image_width }}"
                 height="{{ post.image_height }}"
                 alt="{{ post.title }}"
                 src="{{ r2_public_endpoint_url|safe }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}" />
            <div class="post-move-preview-info">
              <p class="post-move-preview-title">
                {% if post.title %}
                  {{ post.title }}
                {% else %}
                  {{ ftl_get_message("post-no-title") }}
                {% endif %}
              </p>
            </div>
          </div>
        </a>
      </div>

      {% if current_community %}
        <div class="community-current-section">
          <h3 class="section-heading">{{ ftl_get_message("post-current-community") }}</h3>
          <div class="community-move-card community-current-card">
            <div class="community-move-card-content">
              <div class="community-move-card-main">
                <div class="community-move-card-header">
                  <div>
                    <a href="/communities/@{{ current_community.slug }}" class="community-name">{{ current_community.name }}</a>
                    <span class="community-current-badge">{{ ftl_get_message("post-current-community") }}</span>
                  </div>
                  <p class="community-owner-handle muted">@{{ current_community.owner_login_name }}</p>
                </div>
                {% if current_community.description %}
                  <p class="community-description">{{ current_community.description }}</p>
                {% endif %}
              </div>
              <div class="community-move-card-thumbnails">
                {% if current_community.recent_posts %}
                  <div class="community-thumbnails">
                    {% for post in current_community.recent_posts %}
                      <a href="/@{{ current_community.slug }}/{{ post.id }}" class="community-thumbnail-link">
                        <img src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                             alt=""
                             class="community-thumbnail"
                             width="{{ post.image_width }}"
                             height="{{ post.image_height }}" />
                      </a>
                    {% endfor %}
                  </div>
                {% else %}
                  <p class="community-no-posts-message muted">{{ ftl_get_message("community-no-posts") }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      <div class="community-move-section">
        <h3 class="section-heading">{{ ftl_get_message("post-move-available") }}</h3>

        <input type="text"
               id="community-search"
               class="community-move-search"
               placeholder="{{ ftl_get_message('post-move-search-placeholder') }}"
               autocomplete="off" />

        <div id="community-list" class="community-list">
          {# Show "Personal Post" option only if post is currently in a community #}
          {% if current_community %}
            <div class="community-move-card" data-community-name="personal post" data-community-slug="personal" data-community-description="">
              <div class="community-move-card-content">
                <div class="community-move-card-main">
                  <div class="community-move-card-header">
                    <div>
                      <span class="community-name">{{ ftl_get_message("post-personal-post") }}</span>
                    </div>
                  </div>
                  <p class="community-description">{{ ftl_get_message("post-personal-post-description") }}</p>
                  <form method="post"
                        action="/@{{ current_community.slug }}/{{ post_id }}/edit/community"
                        onsubmit="return confirm('{{ ftl_get_message("post-move-confirm-personal") }}');"
                        class="community-move-form">
                    <input type="hidden" name="community_id" value="" />
                    <button type="submit" class="btn btn-move">{{ ftl_get_message("post-move-to-personal") }}</button>
                  </form>
                </div>
              </div>
            </div>
          {% endif %}


          {# Unlisted Communities Section #}
          {% if unlisted_communities %}
            <h4 class="section-heading">{{ ftl_get_message("move-section-unlisted") }}</h4>
            {% for community in unlisted_communities %}
              <div class="community-move-card" data-community-name="{{ community.name|lower }}" data-community-slug="{{ community.slug|lower }}" data-community-description="{{ community.description|lower if community.description else '' }}" data-community-visibility="unlisted">
                <div class="community-move-card-content">
                  <div class="community-move-card-main">
                    <div class="community-move-card-header">
                      <div>
                        <a href="/communities/@{{ community.slug }}" class="community-name">{{ community.name }}</a>
                        <span class="community-private-badge">{{ ftl_get_message("community-badge-unlisted") }}</span>
                      </div>
                      <p class="community-owner-handle muted">@{{ community.owner_login_name }}</p>
                    </div>
                    {% if community.description %}
                      <p class="community-description">{{ community.description }}</p>
                    {% endif %}
                    <form method="post"
                          action="/@{{ current_community.slug if current_community else post.login_name }}/{{ post_id }}/edit/community"
                          onsubmit="return confirm('{{ ftl_format_pattern("post-move-confirm", {"communityName": community.name}) }}');"
                          class="community-move-form">
                      <input type="hidden" name="community_id" value="{{ community.id }}" />
                      <button type="submit" class="btn btn-move">{{ ftl_get_message("post-move-community") }}</button>
                    </form>
                  </div>
                  <div class="community-move-card-thumbnails">
                    {% if community.recent_posts %}
                      <div class="community-thumbnails">
                        {% for post in community.recent_posts %}
                          <a href="/@{{ community.slug }}/{{ post.id }}" class="community-thumbnail-link">
                            <img src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                                 alt=""
                                 class="community-thumbnail"
                                 width="{{ post.image_width }}"
                                 height="{{ post.image_height }}" />
                          </a>
                        {% endfor %}
                      </div>
                    {% else %}
                      <p class="community-no-posts-message muted">{{ ftl_get_message("community-no-posts") }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}

          {# Public Communities (Participated) Section #}
          {% if public_participated_communities %}
            <h4 class="section-heading">{{ ftl_get_message("move-section-public-participated") }}</h4>
            {% for community in public_participated_communities %}
              <div class="community-move-card" data-community-name="{{ community.name|lower }}" data-community-slug="{{ community.slug|lower }}" data-community-description="{{ community.description|lower if community.description else '' }}" data-community-visibility="public-participated">
                <div class="community-move-card-content">
                  <div class="community-move-card-main">
                    <div class="community-move-card-header">
                      <div>
                        <a href="/communities/@{{ community.slug }}" class="community-name">{{ community.name }}</a>
                      </div>
                      <p class="community-owner-handle muted">@{{ community.owner_login_name }}</p>
                    </div>
                    {% if community.description %}
                      <p class="community-description">{{ community.description }}</p>
                    {% endif %}
                    {% if community.posts_count %}
                      <p class="community-stats-inline muted">
                        {{ community.posts_count }} {{ ftl_get_message("community-stats-posts") }}
                      </p>
                    {% endif %}
                    <form method="post"
                          action="/@{{ current_community.slug if current_community else post.login_name }}/{{ post_id }}/edit/community"
                          onsubmit="return confirm('{{ ftl_format_pattern("post-move-confirm", {"communityName": community.name}) }}');"
                          class="community-move-form">
                      <input type="hidden" name="community_id" value="{{ community.id }}" />
                      <button type="submit" class="btn btn-move">{{ ftl_get_message("post-move-community") }}</button>
                    </form>
                  </div>
                  <div class="community-move-card-thumbnails">
                    {% if community.recent_posts %}
                      <div class="community-thumbnails">
                        {% for post in community.recent_posts %}
                          <a href="/@{{ community.slug }}/{{ post.id }}" class="community-thumbnail-link">
                            <img src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                                 alt=""
                                 class="community-thumbnail"
                                 width="{{ post.image_width }}"
                                 height="{{ post.image_height }}" />
                          </a>
                        {% endfor %}
                      </div>
                    {% else %}
                      <p class="community-no-posts-message muted">{{ ftl_get_message("community-no-posts") }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}

          {# Public Communities (Other) Section #}
          {% if public_other_communities %}
            <h4 class="section-heading">{{ ftl_get_message("move-section-public-other") }}</h4>
            {% for community in public_other_communities %}
              <div class="community-move-card" data-community-name="{{ community.name|lower }}" data-community-slug="{{ community.slug|lower }}" data-community-description="{{ community.description|lower if community.description else '' }}" data-community-visibility="public-other">
                <div class="community-move-card-content">
                  <div class="community-move-card-main">
                    <div class="community-move-card-header">
                      <div>
                        <a href="/communities/@{{ community.slug }}" class="community-name">{{ community.name }}</a>
                      </div>
                      <p class="community-owner-handle muted">@{{ community.owner_login_name }}</p>
                    </div>
                    {% if community.description %}
                      <p class="community-description">{{ community.description }}</p>
                    {% endif %}
                    {% if community.posts_count %}
                      <p class="community-stats-inline muted">
                        {{ community.posts_count }} {{ ftl_get_message("community-stats-posts") }}
                      </p>
                    {% endif %}
                    <form method="post"
                          action="/@{{ current_community.slug if current_community else post.login_name }}/{{ post_id }}/edit/community"
                          onsubmit="return confirm('{{ ftl_format_pattern("post-move-confirm", {"communityName": community.name}) }}');"
                          class="community-move-form">
                      <input type="hidden" name="community_id" value="{{ community.id }}" />
                      <button type="submit" class="btn btn-move">{{ ftl_get_message("post-move-community") }}</button>
                    </form>
                  </div>
                  <div class="community-move-card-thumbnails">
                    {% if community.recent_posts %}
                      <div class="community-thumbnails">
                        {% for post in community.recent_posts %}
                          <a href="/@{{ community.slug }}/{{ post.id }}" class="community-thumbnail-link">
                            <img src="{{ r2_public_endpoint_url }}/image/{{ post.image_filename[:2] }}/{{ post.image_filename }}"
                                 alt=""
                                 class="community-thumbnail"
                                 width="{{ post.image_width }}"
                                 height="{{ post.image_height }}" />
                          </a>
                        {% endfor %}
                      </div>
                    {% else %}
                      <p class="community-no-posts-message muted">{{ ftl_get_message("community-no-posts") }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}

          {# No communities message #}
          {% if not unlisted_communities and not public_participated_communities and not public_other_communities %}
            <p class="community-move-no-results">{{ ftl_get_message("post-move-no-results") }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <script>
    // Client-side search filtering for instant feedback
    document.getElementById('community-search').addEventListener('input', function(e) {
      const query = e.target.value.toLowerCase().trim();
      const cards = document.querySelectorAll('.community-move-card');
      const sections = document.querySelectorAll('.section-heading');
      let visibleCount = 0;
      let visibleBySection = { unlisted: 0, 'public-participated': 0, 'public-other': 0 };

      cards.forEach(card => {
        const name = card.getAttribute('data-community-name') || '';
        const slug = card.getAttribute('data-community-slug') || '';
        const description = card.getAttribute('data-community-description') || '';
        const visibility = card.getAttribute('data-community-visibility');

        if (query === '' || name.includes(query) || slug.includes(query) || description.includes(query)) {
          card.style.display = '';
          visibleCount++;
          if (visibility) {
            visibleBySection[visibility] = (visibleBySection[visibility] || 0) + 1;
          }
        } else {
          card.style.display = 'none';
        }
      });

      // Hide/show section headers based on visible communities in each section
      sections.forEach(section => {
        const sectionText = section.textContent.toLowerCase();
        let hasVisible = false;

        if (sectionText.includes('unlisted') || sectionText.includes('posted')) {
          hasVisible = visibleBySection.unlisted > 0;
        } else if (sectionText.includes('participated')) {
          hasVisible = visibleBySection['public-participated'] > 0;
        } else if (sectionText.includes('other') || sectionText.includes('public')) {
          hasVisible = visibleBySection['public-other'] > 0;
        }

        section.style.display = hasVisible ? '' : 'none';
      });

      // Show/hide no results message
      const noResults = document.querySelector('.community-move-no-results');
      const communityList = document.getElementById('community-list');

      if (visibleCount === 0 && query !== '') {
        if (!noResults) {
          const msg = document.createElement('p');
          msg.className = 'community-move-no-results';
          msg.textContent = '{{ ftl_get_message("post-move-no-results") }}';
          communityList.appendChild(msg);
        }
      } else if (noResults) {
        noResults.remove();
      }
    });
  </script>
{% endblock content %}
