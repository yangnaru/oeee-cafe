<form hx-put="/posts/{{ post_id }}"
      hx-target="this"
      hx-swap="outerHTML">
    <div>
        <label>{{ ftl_post_title }}:</label>
        <input type="text" name="title" value="{{ post.title }}">
    </div>
    <div class="form-group">
        <label>{{ ftl_post_description }}:</label>
        <textarea name="content">{{ post.content }}</textarea>
    </div>
    <div>
        <label>{{ ftl_sensitive }}:</label>
        <input type="checkbox"
               name="is_sensitive"
               {% if post.is_sensitive == "true" %}checked{% endif %}>
    </div>
    <div>
        <label>{{ ftl_allow_relay }}:</label>
        <input type="checkbox"
               name="allow_relay"
               {% if post.allow_relay == "true" %}checked{% endif %}>
    </div>
    <div class="post-menu">
        <button class="btn" hx-get="/posts/{{ post_id }}">{{ ftl_cancel }}</button>
        <button class="btn">{{ ftl_save }}</button>
    </div>
</form>
